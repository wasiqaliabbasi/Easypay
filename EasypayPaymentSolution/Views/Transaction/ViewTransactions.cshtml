@model IEnumerable<EasypayPaymentSolution.Models.Transaction>

@{
    ViewBag.Title = "ViewTransactions";
}

<h2>Transaction History</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReceiverEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SenderEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tTime)
        </td>

    </tr>
}

</table>
